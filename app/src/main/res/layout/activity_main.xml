<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:orientation="vertical"
	tools:ignore="LabelFor">

	<EditText
		android:id="@+id/et_main_login"
		android:layout_width="@dimen/auth_et_width"
		android:layout_height="wrap_content"
		android:hint="@string/auth_login_hint"
		android:inputType="textEmailAddress"/>

	<EditText
		android:id="@+id/et_main_pass"
		android:layout_width="@dimen/auth_et_width"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/half_layout_margin"
		android:hint="@string/auth_pass_hint"
		android:inputType="textPassword"/>
	
	<Button
		android:id="@+id/btn_main_sign_in"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/half_layout_margin"
		android:text="@string/auth_login_btn"/>

</LinearLayout>
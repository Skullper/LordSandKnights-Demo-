<?xml version="1.0" encoding="utf-8"?>
<!--Used it to demonstrate that I have experience to work with ConstraintLayout-->
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="@dimen/world_item_height"
	android:background="@drawable/ripple"
	android:elevation="@dimen/elevation"
	android:paddingEnd="@dimen/layout_margin"
	android:paddingStart="@dimen/layout_margin">

	<TextView
		android:id="@+id/tv_item_world_name"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/layout_margin"
		android:ellipsize="end"
		android:lines="1"
		android:maxLines="1"
		android:textColor="@color/colorPrimaryText"
		android:textSize="@dimen/world_item_title_text_size"
		android:textStyle="bold"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintWidth_percent="0.7"
		tools:text="World name"/>

	<TextView
		android:id="@+id/tv_item_world_description"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="@dimen/half_layout_margin"
		android:textColor="@color/colorSecondaryText"
		android:textSize="@dimen/world_item_description_text_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintWidth_percent="0.7"
		tools:text="World description"/>

	<TextView
		android:id="@+id/tv_item_world_country"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/layout_margin"
		android:textColor="@color/colorSecondaryText"
		android:textSize="@dimen/world_item_language_text_size"
		android:textStyle="italic|bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:text="UA"/>

</android.support.constraint.ConstraintLayout>